
{
    "manifest_version": 3,
    "name": "Salah Times",
    "description": "A useful chrome extension which tells you the salah times for the day.",
    "version": "1.0",
    "icons": {
        "16": "salah-icon.png",
        "48": "salah-icon.png",
        "128": "salah-icon.png"
    },
    "action": {
        "default_title": "Salah Times",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "bookmarks"
    ],
    "background": {
        "service_worker": "background.js"
    }
}